version: '2'
services:
    bot:
        build: .
        image: year_in_pixels
        container_name: YearInPixelsDiscord
        volumes:
            - ./data:/data
            - /etc/localtime:/etc/localtime:ro
        restart: unless-stopped
        logging:
            driver: json-file
            options:
                max-file: 10
                max-size: 200k
        environment:
            - PGID=1001
            - PUID=1001
            - TZ=America/Sao_Paulo
            - CHANNELS=1187954559369359450
            - EDIT_BUTTON_TEXT=Editar
            - DAILY_MESSAGE="{data}\n\nComo foi seu dia?"
            - DONE_MESSAGE="{date} foi {button_label} ({button_description})"
            - MONTLY_PROGRESS_TEXT="`{date}`\n**Aqui est√° seu ano at√© agora**"
            - VIEW_COMMAND_RESULT="Aqui est√° o seu Year In Pixels for `{year}`
            - BUTTONS='[["üòÑ","Muito Feliz","#ff6961"],["üôÇ","Feliz","#ffb347"],["üòê","Neutro","#fdfd96"],["üôÅ","Triste","#48d148"],["üòû","Muito Triste","#779ecb"]]'
            - BOT_TOKEN="set_your_own"
            - SPREADSHEET_ID="set_your_own"
        labels:
            - "com.centurylinklabs.watchtower.enable=false"

networks:
    default:
        name: main
        external: true